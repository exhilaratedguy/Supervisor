{
  "name": "Supervisor",
  "version": "1.0",
  "description": "Supervise how long you stay in bad websites!",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Supervisor",
    "default_icon": "images/gray_128.png"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "128": "images/gray_128.png"
  },
  "manifest_version": 2
}